<?xml version="1.0"?>
<ruleset name="PSR2/Laravel">
    <description>PSR2 compliant rules and settings for Laravel</description>

    <arg name="extensions" value="php"/>

    <!-- Specifying applicable coding conventions -->
    <rule ref="PSR2"/>

    <!-- Apply color to output -->
    <arg name="colors"/>

    <!-- Options p: Progress display s: Show rules when error is displayed -->
    <arg value="ps"/>

    <!-- Excluded directories -->
    <exclude-pattern>/vendor/</exclude-pattern>
</ruleset>
